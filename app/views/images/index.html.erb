<div class="page-header">
<h1>80's Music</h1>
</div>

  <div class="row">
    <% @images.each do |image| %>
        <div class="col-md-4">
            <img class="img-responsive img-rounded" src="<%= image.image_url %>">
            <div class="hover-cap caption">
              <div class="bg-dark">
              <h2><%= image.name %></h2>
                <div class="edit pull-right"><%= link_to 'Show', image %> <%= link_to 'Edit', edit_image_path(image) %> <%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </div>
            </div>
        </div>
    <% end %>
  </div>
<%= link_to 'New Image', new_image_path %>
